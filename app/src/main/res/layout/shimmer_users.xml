<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/grey"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/left_background">

            <ImageView
                android:id="@+id/userImg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/cirecle_shape"
                android:backgroundTint="@color/grey" />

            <LinearLayout
                android:id="@+id/userNameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/userImg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameTile"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:background="@color/grey"
                    android:textSize="12sp"
                    tools:text="Name:" />

                <TextView
                    android:id="@+id/usernameTxt"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/grey"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    tools:text="dfjdskfjksdfkskldfksjejkjk" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/userMobileLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userNameLayout"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/userImg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mobileTile"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:background="@color/grey"
                    android:textSize="12sp"
                    tools:text="Mobile:" />

                <TextView
                    android:id="@+id/userMobileTxt"
                    android:layout_width="250dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/grey"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="+9177001438393385478488587383875843" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/userEmailLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userMobileLayout"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/userImg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/emailtit"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:background="@color/grey"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    tools:text="Email:" />

                <TextView
                    android:id="@+id/userEmailTxt"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/grey"
                    android:maxLines="1"
                    android:textSize="12sp"
                    tools:text="fjkdsdjfkkdfjkgdkldffds" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/userSemesterLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userEmailLayout"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/userImg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/semesterTit"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:background="@color/grey"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    tools:text="Semester" />

                <TextView
                    android:id="@+id/userSemesterTxt"
                    android:layout_width="240dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/grey"
                    android:maxLines="1"
                    android:textColor="#696969"
                    android:textSize="12sp"
                    tools:text="dkfdskfsklddfksfdksl" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/userDobLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userSemesterLayout"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/userImg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dobTit"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@color/grey"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    tools:text="D.O.B" />

                <TextView
                    android:id="@+id/userDobTxt"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/grey"
                    android:maxLines="1"
                    android:textSize="12sp"
                    tools:text="dkfdskfsklddfksfdksl" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/userGenderLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/userDobLayout"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/userDobLayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/GenderTit"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:background="@color/grey"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    tools:text="Gender" />

                <TextView
                    android:id="@+id/userGenderTxt"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/grey"
                    android:maxLines="1"
                    android:textSize="12sp"
                    tools:text="dkfdskfsklddfksfdksl" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@id/userDobLayout" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
