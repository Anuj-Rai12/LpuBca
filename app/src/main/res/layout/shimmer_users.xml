<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/userImg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/cirecle_shape"
            android:backgroundTint="@color/grey"/>

        <LinearLayout
            android:id="@+id/userNameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/userImg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTile"
                android:layout_width="80dp"
                android:layout_height="20dp"
                tools:text="Name:"
                android:background="@color/grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/usernameTxt"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:ellipsize="end"
                android:background="@color/grey"
                tools:text="dfjdskfjksdfkskldfksjejkjk" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/userMobileLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/userImg"
            android:layout_below="@id/userNameLayout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mobileTile"
                android:layout_width="80dp"
                android:layout_height="20dp"
                tools:text="Mobile:"
                android:textSize="12sp"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/userMobileTxt"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:background="@color/grey"
                tools:text="+9177001438393385478488587383875843" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/userEmailLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/userImg"
            android:layout_below="@id/userMobileLayout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/emailtit"
                android:layout_width="80dp"
                android:layout_height="20dp"
                tools:text="Email:"
                android:background="@color/grey"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/userEmailTxt"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:maxLines="1"
                android:background="@color/grey"
                tools:text="fjkdsdjfkkdfjkgdkldffds" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/userSemesterLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/userImg"
            android:layout_below="@id/userEmailLayout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/semesterTit"
                android:layout_width="80dp"
                android:layout_height="20dp"
                tools:text="Semester"
                android:textSize="12sp"
                android:background="@color/grey"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/userSemesterTxt"
                android:layout_width="240dp"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:maxLines="1"
                android:background="@color/grey"
                android:textColor="#696969"
                tools:text="dkfdskfsklddfksfdksl" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/userDobLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/userImg"
            android:layout_below="@id/userSemesterLayout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dobTit"
                android:layout_width="40dp"
                android:layout_height="20dp"
                tools:text="D.O.B"
                android:background="@color/grey"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/userDobTxt"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:background="@color/grey"
                android:textSize="12sp"
                android:maxLines="1"
                tools:text="dkfdskfsklddfksfdksl" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/userGenderLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/userDobLayout"
            android:layout_alignTop="@id/userDobLayout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/GenderTit"
                android:layout_width="80dp"
                android:layout_height="20dp"
                tools:text="Gender"
                android:background="@color/grey"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/userGenderTxt"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:maxLines="1"
                android:background="@color/grey"
                tools:text="dkfdskfsklddfksfdksl" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/userDobLayout"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>