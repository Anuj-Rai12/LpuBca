<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/grey"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/left_background">

        <ImageView
            android:id="@+id/myNewsImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_folder_name"
            android:backgroundTint="@color/grey" />
        <TextView
            android:id="@+id/myName"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignStart="@id/myNewsImage"
            android:layout_alignBottom="@id/myNewsImage"
            android:layout_margin="6dp"
            android:background="@color/grey"
            android:drawablePadding="4dp" />

        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/myName"
            android:layout_alignStart="@id/myName"
            android:layout_alignEnd="@id/myNewsImage"
            android:layout_margin="20dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/SourceTime"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@id/newsTitle"
            android:layout_alignParentEnd="true"
            android:layout_margin="6dp"
            android:padding="8dp"
            android:background="@color/grey"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>