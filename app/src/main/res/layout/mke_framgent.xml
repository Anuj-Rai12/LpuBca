<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    tools:context="com.example.working.loginorsignup.forgertpass.MakeSelection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta"
                android:text="Make\nSelection."
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textSize="15sp"
                android:text="There are your contact detail make, \nYour Selection"
                android:textColor="@color/black"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/re1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:background="#f8f8ff "
            android:padding="10dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/mobilecoutomicon"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/fir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:text="Via Text."
                android:textColor="#696969"
                android:fontFamily="@font/average_sans"
                android:layout_toRightOf="@+id/img" />
            <TextView
                android:id="@+id/sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginTop="30dp"
                android:text="The OTP will send to your phone number."
                android:textColor="@color/black"
                android:fontFamily="@font/average_sans"
                android:layout_toRightOf="@id/img"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:background="#f8f8ff "
            android:padding="10dp">

            <ImageView
                android:id="@+id/mail"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/ic_email"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/fi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:text="Via Email."
                android:textColor="#696969"
                android:fontFamily="@font/average_sans"
                android:layout_toRightOf="@+id/mail" />
            <TextView
                android:id="@+id/se"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginTop="30dp"
                android:text="The OTP will send to your Email address."
                android:textColor="@color/black"
                android:fontFamily="@font/average_sans"
                android:layout_toRightOf="@id/mail"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>